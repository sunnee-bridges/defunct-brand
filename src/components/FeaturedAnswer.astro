---
interface Props {
  answer: string;
}

const { answer } = Astro.props;
---

<div class="featured-answer">
  <p><strong>Quick Answer:</strong> {answer}</p>
</div>

<style>
  .featured-answer {
    background: linear-gradient(135deg, #f0f7ff 0%, #e0f2fe 100%);
    border-left: 4px solid #0284c7;
    border-radius: 6px;
    padding: 20px;
    margin: 24px 0;
    font-size: 16px;
    line-height: 1.6;
    color: #0c2340;
  }

  .featured-answer p {
    margin: 0;
  }

  .featured-answer strong {
    color: #0c2340;
  }
</style>