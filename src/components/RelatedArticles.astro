---
interface Props {
  articles: Array<{
    title: string;
    url: string;
    description: string;
  }>;
}

const { articles } = Astro.props;
---

<section class="related-articles mt-12 pt-8 border-t border-slate-200 dark:border-slate-800">
  <h3 class="text-xl font-bold mb-4">Related Articles</h3>
  <ul class="space-y-3">
    {articles.map((article) => (
      <li>
        <a href={article.url} class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300 font-medium">
          {article.title}
        </a>
        <p class="text-sm text-slate-600 dark:text-slate-400 mt-1">{article.description}</p>
      </li>
    ))}
  </ul>
</section>

<style>
  .related-articles {
    background: #fafafa;
    padding: 24px;
    border-radius: 8px;
    dark:background: #1a1a1a;
  }
</style>