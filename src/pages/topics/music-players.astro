---
import Base from "../../layouts/Base.astro";
const items = [
  { name: "iPod", slug: "ipod" },
  { name: "Zune", slug: "zune" },
];
const title = "Defunct Music Players â€¢ Topic Hub";
const desc  = "Explore discontinued music players and services: timelines, outcomes, and related brands.";
const canonical = Astro.site ? new URL("/topics/music-players/", Astro.site).href : "/topics/music-players/";
const ldItems = items.map((b, i) => ({
  "@type": "ListItem", position: i+1, name: b.name,
  url: Astro.site ? new URL(`/brand/${encodeURIComponent(b.slug)}/`, Astro.site).href : `/brand/${encodeURIComponent(b.slug)}/`
}));
---

<Base title={title} description={desc} canonical={canonical} jsonLd={[
  { "@context":"https://schema.org", "@type":"ItemList", name:title, numberOfItems: items.length, itemListElement: ldItems }
]}>
  <h1 class="text-2xl md:text-3xl font-bold mb-2">{title}</h1>
  <ul class="list-disc pl-5">
    {items.map(i => <li><a class="focus-ring hover:underline" href={`/brand/${encodeURIComponent(i.slug)}/`}>{i.name}</a></li>)}
  </ul>
</Base>
